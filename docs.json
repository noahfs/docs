{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Glimpse Enterprise Documentation",
  "colors": {
    "primary": "#2234d8",
    "light": "#6AAEF5",
    "dark": "#2234d8"
  },
  "favicon": "/favicon.jpeg",
  "fonts": {
    "heading": {
      "family": "Inter Latin",
      "source": "https://mintlify-assets.b-cdn.net/inter-latin-wght-normal.C2S99t-D.woff2",
      "format": "woff2"
    },
    "body": {
      "family": "Inter Latin",
      "source": "https://mintlify-assets.b-cdn.net/inter-latin-wght-normal.C2S99t-D.woff2",
